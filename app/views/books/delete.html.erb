<p id="notice"><%= notice %></p>

<h2>Delete Book</h2>
<%= form_for(@book, :method => 'delete') do |f| %>

<p>Are you sure you want to permanetly delete this book?</p>

  <p>
    <strong>Title:</strong>
    <%= @book.title %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= @book.author %>
  </p>

  <p>
    <strong>Price:</strong>
    <span class="dollars"><%= @book.price %></span>
  </p>

  <p>
    <strong>Published Date:</strong>
    <%= @book.pDate %>
  </p>

<%= f.submit("Delete Book") %>
<% end %>

<%= link_to 'Back', books_path %>
